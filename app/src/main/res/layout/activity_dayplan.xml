<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_alignParentStart="true">

    <LinearLayout
        android:id="@+id/daylinear"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_height="match_parent"
        tools:context="com.jx372.daytest.DayActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/linearLayout0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:id="@+id/daytext"
            android:text="2017-08-23"
            android:textColor="#ffffff"
            android:textSize="27sp"/>

        <LinearLayout
            android:paddingTop="5dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/textView6"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1"
                android:text="도전과제"/>

            <TextView
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/targettext"
                android:layout_weight="3"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""/>
        </LinearLayout>
        <View style="@style/DividerStyle2"/>

        <LinearLayout
            android:paddingTop="3dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1"
                android:text="목표액"/>

            <TextView
                android:id="@+id/dayGoalsale"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_weight="3"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""/>
        </LinearLayout>

        <View style="@style/DividerStyle2"/>
        <LinearLayout
            android:paddingTop="3dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="#000000"
                android:id="@+id/achievetext"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1"
                android:text="예상주행거리"/>

            <TextView
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"

                android:layout_weight="3"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""/>
        </LinearLayout>
        <View style="@style/DividerStyle2"/>

        <LinearLayout
            android:paddingTop="3dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1"
                android:text="방문지점"/>

            <TextView
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"

                android:layout_weight="3"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""/>
        </LinearLayout>
        <View style="@style/DividerStyle2"/>
        <LinearLayout
            android:paddingTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="업무계획"
                android:background="@color/material_grey_600"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_height="wrap_content"/>

            <TextView

                android:id="@+id/daycontent"
                android:layout_width="match_parent"
                android:text="일일내용"
                android:textColor="#000000"
                android:textSize="15dp"
                android:minHeight="500dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>


    </LinearLayout>



</ScrollView>
