
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_alignParentStart="true">
    <ViewFlipper
        android:background="@color/material_light_blue_50"
        android:id="@+id/daymodifyflip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:flipInterval="100">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="#ffffff"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:id="@+id/linearLayout0">


            <LinearLayout
                android:paddingTop="5dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/material_light_blue_300"
                    android:gravity="right" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="도전과제"
                    android:textColor="#000000"
                    android:textSize="15sp" />
                <Spinner
                    android:id="@+id/dayspinner"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:inputType="textNoSuggestions"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"/>

            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:paddingTop="3dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="목표액"/>

                <EditText
                    android:id="@+id/goalsale"
                    android:textColor="#000000"
                    android:layout_width="0dip"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    />


            </LinearLayout>


            <LinearLayout
                android:paddingTop="3dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/material_light_blue_300"
                    android:gravity="right" />

                <TextView
                    android:textColor="#000000"
                    android:id="@+id/achievetext"
                    android:textSize="15sp"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="예상거리"/>

                <TextView
                    android:id="@+id/shortDis"
                    android:textColor="#000000"
                    android:textSize="15sp"

                    android:layout_weight="2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""/>


                <com.jx372.test.font.RobotoTextView
                    android:onClick="mOnclick"
                    android:layout_gravity="right"
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/material_light_blue_300"
                    android:gravity="center"
                    android:minHeight="20dp"
                    android:minWidth="30dp"
                    android:text="거리계산"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:typeface="robotoMedium"/>

            </LinearLayout>


            <LinearLayout
                android:paddingTop="3dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/material_light_blue_300"
                    android:gravity="right" />

                <TextView
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="방문지점"/>

                <TextView
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:id="@+id/visitPos"
                    android:layout_weight="3"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:paddingTop="20dp">


                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="활동계획"
                    android:textColor="@color/material_blue_400"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>


            <View style="@style/DividerStyle2"/>


            <LinearLayout
                android:paddingTop="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="700dp">
                <include layout="@layout/editor_toolbar" />


                <com.github.irshulx.Editor
                    app:background="@null"
                    app:render_type="Editor"
                    android:id="@+id/editorday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:placeholder="Start writing here..."
                    />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</ViewFlipper>

</ScrollView>
