<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_alignParentStart="true">

    <LinearLayout
        android:layout_marginTop="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:id="@+id/linearLayout0">


            <LinearLayout
                android:paddingTop="5dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/material_light_blue_300"
                    android:gravity="right" />

                <TextView

                    android:id="@+id/textView19"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="고객명"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/customerName"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="동작슈퍼"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <com.jx372.test.font.RobotoTextView
                    android:id="@+id/namesearch"
                    android:onClick="btnSearch"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/material_light_blue_300"
                    android:gravity="center"
                    android:minHeight="20dp"
                    android:minWidth="30dp"
                    android:text="검색"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:typeface="robotoMedium"/>
                <TextView
                    android:layout_weight="0.5"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" />

            </LinearLayout>





            <LinearLayout
                android:paddingTop="3dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/material_light_blue_300"
                    android:gravity="right" />

                <TextView

                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="고객코드"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView

                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:id="@+id/customerCode"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="A_001"/>
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/material_light_blue_300"
                    android:gravity="right" />

                <TextView
                    android:textColor="#000000"

                    android:textSize="15sp"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="대표자"/>

                <TextView

                    android:textColor="#000000"
                    android:id="@+id/chiefName"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="최경호"/>
                <TextView
                    android:layout_weight="0.5"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:paddingTop="3dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/material_light_blue_300"
                    android:gravity="right" />

                <TextView
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="주소"/>

                <TextView
                    android:id="@+id/customerAddress"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_weight="3"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="서울특별시 동작구 사당동"/>
            </LinearLayout>

            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:paddingTop="20dp">


                <EditText
                    android:hint="제목  [상담일지]2017-09-25"
                    android:id="@+id/consultTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:paddingTop="20dp">


                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="상담내역"
                    android:textColor="@color/material_blue_400"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>


            <View style="@style/DividerStyle2"/>


            <LinearLayout
                android:paddingTop="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="700dp">
                <include layout="@layout/editor_toolbar" />


                <com.github.irshulx.Editor
                    app:render_type="Editor"
                    android:id="@+id/consultmemo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:placeholder="Start writing here..."
                    />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>



</ScrollView>
