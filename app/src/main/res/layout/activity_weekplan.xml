
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_alignParentStart="true">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_height="match_parent"
        tools:context="com.jx372.daytest.MainActivity">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:id="@+id/linearLayout0">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:id="@+id/weektext"
                android:text="8월 4주차 (2017)"
                android:textColor="#ffffff"
                android:textSize="27sp"/>

            <LinearLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:id="@+id/textView6"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="3"
                    android:text="주간 목표액"/>

                <TextView
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:id="@+id/targettext"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"/>
            </LinearLayout>

            <LinearLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:text="주간 매출액"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:textColor="#000000"
                    android:id="@+id/salestext"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"/>
            </LinearLayout>


            <LinearLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="3"
                    android:text="주간 달성률"/>

                <TextView
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:id="@+id/achievetext"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"/>
            </LinearLayout>


        </LinearLayout>


        <View style="@style/DividerStyle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dip"
                android:layout_weight="1"
                android:text="  일일 목표액"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/monsale"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:text="0"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:id="@+id/linearLayout">

            <TextView
                android:id="@+id/montext"
                android:layout_width="0dip"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Mon"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <ListView
                android:id="@+id/list"
                android:layout_width="0dip"
                android:layout_weight="4"
                android:layout_height="150dp">

            </ListView>



        </LinearLayout>
        <View style="@style/DividerStyle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dip"
                android:layout_weight="1"
                android:text="  일일 목표액"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dip"
                android:layout_weight="1"
                android:text="0"
                android:id="@+id/tuesale"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout

            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:id="@+id/linearLayout3"
            android:layout_above="@+id/linearLayout2"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/tuetext"
                android:layout_width="0dip"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:text="Tue"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <ListView
                android:id="@+id/list2"
                android:layout_width="0dip"
                android:layout_weight="4"
                android:layout_height="150dp">

            </ListView>


        </LinearLayout>
        <View style="@style/DividerStyle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dip"
                android:layout_weight="1"
                android:text="  일일 목표액"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/wedsale"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:text="0"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout

            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:id="@+id/linearLayout2"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/linearLayout3">

            <TextView
                android:id="@+id/wedtext"
                android:layout_width="0dip"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:text="Wed"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <ListView
                android:id="@+id/list3"
                android:layout_width="0dip"
                android:layout_weight="4"
                android:layout_height="150dp">

            </ListView>


        </LinearLayout>
        <View style="@style/DividerStyle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dip"
                android:layout_weight="1"
                android:text="  일일 목표액"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/thusale"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:text="0"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout

            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/thutext"
                android:layout_width="0dip"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:text="Thu"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <ListView
                android:id="@+id/list4"
                android:layout_width="0dip"
                android:layout_weight="4"
                android:layout_height="150dp">

            </ListView>


        </LinearLayout>
        <View style="@style/DividerStyle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dip"
                android:layout_weight="1"
                android:text="  일일 목표액"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/frisale"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:text="0"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout

            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/fritext"
                android:layout_width="0dip"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:text="Fri"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <ListView
                android:id="@+id/list5"
                android:layout_width="0dip"
                android:layout_height="150dp"
                android:layout_weight="4">

            </ListView>


        </LinearLayout>




    </LinearLayout>

</ScrollView>
