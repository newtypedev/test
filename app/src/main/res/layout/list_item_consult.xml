<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardBackgroundColor="@color/material_yellow_100"
        card_view:cardElevation="@dimen/cardview_compat_inset_shadow"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
<LinearLayout
    android:minHeight="300dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingTop="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="@color/material_green_600"
            android:gravity="right"
            />
        <TextView
            android:id="@+id/startclick"
            android:textColor="@color/main_color_grey_800"
            android:textSize="14dp"
            android:paddingLeft="5dp"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="2"
            android:text="고객코드"/>

        <TextView
            android:id="@+id/customerCode"
            android:textColor="@color/main_color_grey_800"
            android:textSize="14dp"

            android:layout_weight="2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text=""/>
        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="@color/material_green_600"
            android:gravity="left"
            />

        <TextView

            android:textColor="@color/main_color_grey_800"
            android:textSize="14dp"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="2"
            android:paddingLeft="5dp"
            android:text="대표자"/>

        <TextView
            android:id="@+id/chiefName"
            android:textColor="@color/main_color_grey_800"
            android:textSize="14dp"
            android:layout_weight="2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text=""/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="2dp" />

    </LinearLayout>
    <LinearLayout
        android:paddingTop="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="@color/material_green_600"
            android:gravity="left"
            />

        <TextView
            android:id="@+id/endclick"
            android:textColor="@color/main_color_grey_800"
            android:textSize="14dp"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="2"
            android:paddingLeft="5dp"
            android:text="고객명"/>

        <TextView
            android:id="@+id/customerName"
            android:textColor="@color/main_color_grey_800"
            android:textSize="14dp"
            android:layout_weight="4"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text=""/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="2dp" />



    </LinearLayout>
    <LinearLayout
        android:paddingTop="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="@color/material_green_600"
            android:gravity="right"
            />
        <TextView

            android:textColor="@color/main_color_grey_800"
            android:textSize="14dp"
            android:paddingLeft="5dp"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:text="주소"/>

        <TextView
android:id="@+id/customerAddress"
            android:textColor="@color/main_color_grey_800"
            android:textSize="14dp"

            android:layout_weight="3.5"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text=""/>



    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/main_color_grey_700"
            android:id="@+id/consultTitle"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[상담일지]2017-09-25"
            android:textSize="17dp"
            android:textStyle="bold"
            android:gravity="left" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/material_green_600"
        android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.irshulx.Editor
            app:render_type="Renderer"
            android:layout_width="match_parent"
            android:id="@+id/consultmemoview"
            android:minHeight="300dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_height="wrap_content"

            />
    </LinearLayout>

</LinearLayout>

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"

            android:layout_height="300dp">
    <CheckBox
        android:layout_alignParentRight="true"
        android:padding="4dp"
        android:id="@+id/checkSolve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        tools:text="CrimeTitle"
        android:layout_toLeftOf="@id/checkSolve"
        android:id="@+id/titleText"
        android:padding="4dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        tools:text="CrimeDate"
        android:id="@+id/dataText"
        android:padding="4dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkSolve"
        android:layout_alignParentStart="true" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>