<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_alignParentStart="true">

    <LinearLayout
        android:id="@+id/daylinear"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_height="match_parent"
        tools:context="com.jx372.daytest.DayActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/linearLayout0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_light_blue_500"
            android:gravity="center"
            android:id="@+id/daytext"
            android:text="2017-08-23"
            android:textColor="#ffffff"
            android:textSize="20sp"/>

        <LinearLayout
            android:paddingTop="5dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
<TextView
    android:layout_marginLeft="10dp"
    android:layout_width="10dp"
    android:layout_height="10dp"
    android:layout_gravity="center"
    android:background="@color/material_light_blue_300"
    android:gravity="right"
    />
            <com.jx372.test.font.RobotoTextView
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="도전과제"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                app:typeface="robotoThin" />


            <TextView
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/daychallenge"
                android:layout_weight="3"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""/>
        </LinearLayout>


        <LinearLayout
            android:paddingTop="3dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:background="@color/material_light_blue_300"
                android:gravity="right"
                />
            <com.jx372.test.font.RobotoTextView
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="목표액"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                app:typeface="robotoThin" />

            <TextView
                android:id="@+id/dayGoalsale"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text=""
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:paddingTop="3dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:background="@color/material_light_blue_300"
                android:gravity="right"
                />
            <com.jx372.test.font.RobotoTextView
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="예상주행거리"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                app:typeface="robotoThin" />

            <TextView
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"

                android:layout_weight="3"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""/>
        </LinearLayout>


        <LinearLayout
            android:paddingTop="3dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:background="@color/material_light_blue_300"
                android:gravity="right"
                />
            <com.jx372.test.font.RobotoTextView
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="방문지점"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                app:typeface="robotoThin" />

            <TextView
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"

                android:layout_weight="3"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""/>
        </LinearLayout>



        <LinearLayout
            android:paddingTop="20dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="활동계획"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:textColor="@color/material_blue_400"
                android:textSize="20dp" />
</LinearLayout>
        <View style="@style/DividerStyle2"/>
            <LinearLayout
            android:paddingTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/daycontent"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:textSize="15dp"
                android:minHeight="500dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View style="@style/DividerStyle2"/>

        <LinearLayout
            android:paddingTop="5dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:visibility="gone"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="팀장의견"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:gravity="left"
                android:textColor="@color/material_green_400"
                android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:paddingTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:visibility="gone"
                android:id="@+id/daycomment"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:textSize="15dp"
                android:minHeight="200dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </LinearLayout>


    </LinearLayout>



</ScrollView>
</LinearLayout>