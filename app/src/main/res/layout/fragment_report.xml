<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_alignParentStart="true">

    <LinearLayout
        android:id="@+id/daylinear"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_height="match_parent"
        tools:context="com.jx372.daytest.DayActivity">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:id="@+id/linearLayout0">

            <LinearLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:paddingTop="5dp"
                    android:background="#ffffff"
                    android:layout_width="0dip"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:background="@color/material_light_blue_300"
                        android:gravity="left"
                        />
                <TextView
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:text="매출목표"/>

                <TextView
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="100,000"/>


                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:background="@color/material_light_blue_300"
                        android:gravity="left"
                        />

                <TextView
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:text="매출액"/>

                <TextView
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="0"/>

                    </LinearLayout>

                <LinearLayout
                    android:paddingTop="5dp"
                    android:background="#ffffff"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:background="@color/material_light_blue_300"
                        android:gravity="left"
                        />

                    <TextView
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:text="달성률"/>

                    <TextView
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:id="@+id/daychallenge"
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="80%"/>
                </LinearLayout>

            </LinearLayout>

            <View style="@style/DividerStyle2"/>

            <LinearLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:paddingTop="5dp"
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:background="@color/material_light_blue_300"
                        android:gravity="left"
                        />

                    <TextView
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:layout_weight="2"
                        android:text="출근(km)"/>

                    <TextView
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="25"/>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:background="@color/material_light_blue_300"
                        android:gravity="left"
                        />
                    <TextView
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"

                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:text="퇴근(km)"/>

                    <TextView
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="100"/>


                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:background="@color/material_light_blue_300"
                        android:gravity="left"
                        />
                    <TextView
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"

                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:text="주행거리(km)"/>

                    <TextView
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"

                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="75"/>
                    </LinearLayout>


            </LinearLayout>

            <View style="@style/DividerStyle2"/>
            <LinearLayout
                android:paddingTop="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="업무보고"
                    android:background="@color/material_blue_A700"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"/>

                <TextView

                    android:id="@+id/daycontent"
                    android:layout_width="match_parent"
                    android:text="일일내용"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:minHeight="300dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:paddingTop="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="팀장의견"
                    android:background="@color/material_red_300"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"/>

                <TextView

                    android:layout_width="match_parent"
                    android:text="의견내용"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:minHeight="200dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>



</ScrollView>
